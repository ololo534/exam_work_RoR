= form_tag  '/login', :class => "form-signin text-center" do
  .text-center.mb-4
    %h1.h3.mb-3.font-weight-normal
      = t('navbar.singin')
  .form-label-group
    %label{:for => "username"}
    %input#username.form-control{:name => "username", :placeholder => t("username"), :type => "text"}/
  .form-label-group
    %label{:for => "password"}
    %input#password.form-control{:name => "password", :placeholder => t("password"), :type => "password"}/
  %input.btn.btn-lg.btn-primary.btn-block{"data-disable-with" => t('login_attempt'), :name => "commit", :type => "submit", :value => t('navbar.singin')}/
  %a{:href => "/signup"}
    = t('navbar.singup')
